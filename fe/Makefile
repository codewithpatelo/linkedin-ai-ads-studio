# Frontend Makefile for LinkedIn Ads Image Generation Studio

.PHONY: help install dev build preview lint format clean test

# Default target
help:
	@echo "LinkedIn Ads Frontend - Available commands:"
	@echo ""
	@echo "  setup     - Install dependencies"
	@echo "  dev       - Start development server"
	@echo "  build     - Build for production"
	@echo "  preview   - Preview production build"
	@echo "  lint      - Run ESLint"
	@echo "  format    - Format code with Prettier"
	@echo "  clean     - Clean build artifacts"
	@echo "  test      - Run tests"
	@echo ""

# Install dependencies
setup:
	@echo "ğŸ“¦ Installing frontend dependencies..."
	npm install
	@echo "âœ… Frontend dependencies installed!"

# Start development server
dev:
	@echo "ğŸš€ Starting frontend development server..."
	npm run dev

# Build for production
build:
	@echo "ğŸ—ï¸  Building frontend for production..."
	npm run build
	@echo "âœ… Frontend build complete!"

# Preview production build
preview:
	@echo "ğŸ‘€ Starting production preview..."
	npm run preview

# Run linting
lint:
	@echo "ğŸ” Running ESLint..."
	npm run lint

# Format code
format:
	@echo "âœ¨ Formatting code with Prettier..."
	npx prettier --write "src/**/*.{ts,tsx,js,jsx,css,md}"
	@echo "âœ… Code formatted!"

# Clean build artifacts
clean:
	@echo "ğŸ§¹ Cleaning build artifacts..."
	rm -rf dist
	rm -rf node_modules/.vite
	@echo "âœ… Build artifacts cleaned!"

# Run tests
test:
	@echo "ğŸ§ª Running tests..."
	npm run test

# Quick development setup
quick-dev: setup dev
